if note
  h1 Edit Note
else
  h1 New Note

- var item = note || {title: '', text: ''}
//- This is an if note exists then add this text, if not/else dont do it
- var override = note ? '/' + note._id + '?_method=PUT' : ''

form(method='POST', action='/notes#{override}')
  .input-group
    label(for='title') Title
    //- By writing the for title on the label it links it to the input and if the title is clicked it relinks to input.
    input#title(type='text', name='title', placeholder='Enter Your Awesome Title', value='#{item.title}')
  .input-group
    label(for='text') Text
    textarea#text(type='text', name='text')= item.text
  .input-group
    label(for='cat') Category
    select#cat(name='category')
      for cat in categories
        option= cat.name
  .input-group
    input(type='submit', value='Save')
